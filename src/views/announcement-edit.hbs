<h3>Edit {{doc.name}} Submission</h3>

<form action="" method="post">
    <input type="text" name="name" placeholder="Name of Event" value="{{doc.name}}">
    <input type="text" name="location" placeholder="Location" value="{{doc.location}}">
    <input type="date" name="date" value="{{doc.date}}">

    <label for="start_time">Start Time</label>
    <input type="time" name="startTime" value="{{doc.start_time}}">
        
    <label for="end_time">End Time</label>
    <input type="time" name="endTime" value="{{doc.end_time}}">

    <label for="deadline">Deadline</label>
    <input type="date" name="deadline" value="{{doc.deadline}}">

    <label for="price">Price</label>
    <input type="number" name="price" value="{{doc.price}}">

    <label for="district_event">District Event</label>
    <input type="checkbox" name="districtEvent" value="{{doc.district_event}}">

    <label for="promo_request">Promo Request</label>
    <input type="checkbox" name="promoRequest" value="{{doc.promo_request}}">

    <textarea name="promoMaterial" placeholder="Place all promotion material here." value="{{doc.promo_material}}"></textarea>

    <input type="submit" value="submit">
</form>